# NTN Docker Compose Environment Variables
# Copy this file to .env and customize as needed

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
PYTHONPATH=/app:/app/e2_ntn_extension

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# E2 Termination Configuration
E2_TERMINATION_PORT=36421
E2_TERMINATION_HOST=e2-termination

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_DB=0

# Prometheus Configuration
PROMETHEUS_RETENTION=15d
PROMETHEUS_PORT=9090

# xApp Configuration (Handover)
HANDOVER_XAPP_PORT=8080
HANDOVER_CHECK_INTERVAL=5
HANDOVER_PREDICTION_WINDOW=30

# xApp Configuration (Power Control)
POWER_XAPP_PORT=8081
POWER_CHECK_INTERVAL=5
POWER_CONTROL_MODE=NORMAL
# POWER_CONTROL_MODE options: NORMAL, EFFICIENCY, QUALITY, RAIN_FADE

# Docker Configuration
COMPOSE_PROJECT_NAME=ntn-platform
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Resource Limits (optional, comment out to disable)
# MEMORY_LIMIT=2g
# CPU_LIMIT=2

# Network Configuration
NETWORK_DRIVER=bridge

# Data Persistence
ENABLE_REDIS_PERSISTENCE=true
ENABLE_PROMETHEUS_PERSISTENCE=true

# Security
# NON_ROOT_USER=1000
# ENABLE_AUTH=false
